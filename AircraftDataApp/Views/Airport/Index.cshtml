@model IEnumerable<AircraftDataApp.Models.Airport>

@{
    ViewData["Title"] = "Index";
}

<h1>Airports</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AirportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportCodeShort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportCodeLong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCodeShort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCodeLong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAirport">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAirport">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
